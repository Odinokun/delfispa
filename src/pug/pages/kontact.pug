extends ../_template

block variables
  - var title = 'Kontaktanfrage | Delfi Spa'
  - var pageHeaderTitle = 'Kontaktanfrage'
  - var breadcrumbs01 = 'home'
  - var breadcrumbs02 = 'Kontaktanfrage'

block content
  include ../sections/aside-left
  include ../sections/header

  //begin content
  section.main.contacts
    //begin contacts-header
    header.contacts-header

      //begin breadcrumbs
      section.breadcrumbs
        ul.breadcrumbs__list
          li.breadcrumbs__item
            a.breadcrumbs__link(href="/") #{breadcrumbs01}
          li.breadcrumbs__item
            a.breadcrumbs__link(href="#") #{breadcrumbs02}
      //end breadcrumbs

      h2.contacts-header__title Kontaktanfrage
    //end contacts-header


    //begin contacts-block
    section.contacts-block
      .container
        .contacts-block__left
          img(src="assets/img/contacts-map.jpg" alt="map")
        .contacts-block__right
          h3.contacts-block__title Gerne können Sie uns eine Nachricht hinterlassen, wir rufen Sie schnellstmöglich zurück.
          table.contacts-block__table
            tr
              td Telefonische Beratung
              td 0800 - 58 95 287
                span (kostenfreie Beratungshotline)
            tr
              td Faxkontakt
              td 030 - 616 7 4116
                span (Fax)
            tr
              td E-mail
              td
                a(href="mailto:info@4-deluxe.de") info@4-deluxe.de
    //end   contacts-block

    //begin contacts-form
    section.contacts-form
      .container
        h2.contacts-form__title Kontaktanfrage Infrasun Infrarotkabinen
        form.contacts-form__form#contact-form(name="contact-form")
          .contacts-form__checkbox-row
            label.contacts-form__label
              input(type="checkbox" name="ausstellung")
              .contacts-form__checkbox
              span Bitte nennen Sie mir eine Ausstellung in meiner Nähe
            label.contacts-form__label
              input(type="checkbox" name="kontakt")
              .contacts-form__checkbox
              span Bitte nehmen Sie telefonisch mit mir Kontakt auf
          .contacts-form__inputs-item
            input(name="name" minlength="3" placeholder="Name, Vorname *" required)
            input(name="strabe" placeholder="Straße, Hausnummer")
            input(name="telefon" minlength="11" placeholder="Telefon *" required)

          .contacts-form__inputs-item
            input(name="firma" placeholder='Name Company')
            input(name="plz" placeholder="PLZ, Ort")
            input(name="email" placeholder='Email*' required)

          .contacts-form__inputs-item.contacts-form__inputs-item--lg
            input(name="model" placeholder='Ich interessiere mich für folgendes Modell')
            textarea(name="nachricht" placeholder='Nachricht')

          .contacts-form__footer
            .contacts-form__footer-checkbox
              label.contacts-form__label
                input(type="checkbox" name="kopie")
                .contacts-form__checkbox
                span Ich stimme der Erhebung, Verarbeitung und Nutzung meiner personenbezogenen Daten gemäß der Datenschutzerklärung zu.

            .contacts-form__footer-text
              p Bitte beachten Sie!
              p Ihre Anfrage bearbeiten wir üblicherweise innerhalb der nächsten 24 Stunden. Sollten Sie in diesem Zeitraum keine Nachricht von uns erhalten, ist unsere Email-Antwort möglicherweise von Ihrem Provider als "Spam" herausgefiltert worden. Bitte prüfen Sie dies. Vielen Dank für Ihre eventuelle Rückmeldung bei Nicht-Erhalt unserer Antwort.
          span.btn.btn--custom.contacts-form__btn
            span.btn--inner
              input(type="submit" id="send-contact-form" value='Senden')
    //end   contacts-form


  //end content

  include ../sections/footer
  include ../sections/popup-success
  include ../sections/scripts