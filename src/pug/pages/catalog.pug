extends ../_template

mixin catalog-item(peoples, price, size, stock)
  .catalog-item(data-peoples='' + peoples + '',
                data-price='' + price + '',
                data-size='' + size + '',
                data-stock='' + stock + '')
    a(href="/productcard.html").catalog-item__link
    .catalog-item__cover
      button
        svg
          use(xlink:href="assets/img/sprite.svg#basket")
        span buy now

    h3.catalog-item__title Delfi Spa - Nerida

    .catalog-item__img
      img(src="assets/img/catalog/item-01.jpg" alt="delfi spa")

    .catalog-item__specifications
      .catalog-item__specifications--left
        span.catalog-item__size 217 x 217 x 104 cm
        span.catalog-item__injectors Massagedüsen: 69
      .catalog-item__specifications--right
        .catalog-item__peoples
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")
          svg
            use(xlink:href="assets/img/sprite.svg#people")

    .catalog-item__price
      .catalog-item__price--left
        span.catalog-item__price-old Preis: 7.990,- €
        span.catalog-item__price-new Aktion 5.999,- €
      .catalog-item__price--right
        //button.catalog-item__compare
          svg
            use(xlink:href="assets/img/sprite.svg#arrows")
        .catalog-item__more
          svg
            use(xlink:href="assets/img/sprite.svg#plus")


block variables
  - var title = 'Catalogue | Delfi Spa'
  - var pageHeaderTitle = 'Catalogue'
  - var breadcrumbs01 = 'home'
  - var breadcrumbs03 = 'Catalog'

block content
  include ../sections/aside-left
  include ../sections/header

  //begin content
  section.main.catalog
    //begin catalog-header
    header.catalog-header

      //begin breadcrumbs
      section.breadcrumbs
        ul.breadcrumbs__list
          li.breadcrumbs__item
            a.breadcrumbs__link(href="/") #{breadcrumbs01}
          li.breadcrumbs__item
            a.breadcrumbs__link(href="#") #{breadcrumbs03}
      //end breadcrumbs

      h2.catalog-header__title Catalogue SPA Pools
      p Wir bieten Ihnen eine umfangreiche Modellauswahl von Whirlpools, die Ihren individuellen Wünschen und Bedürfnissen entsprechen werden, Sie können aus einer Vielzahl von Modellen mit den unterschiedlichsten Ausstattungen auswählen. Bei uns finden Sie das Modell, das zu Ihnen passt und Ihren Wünschen entspricht. Unsere beliebtesten Modelle sind schnell direkt ab Lager verfügbar.
    //end catalog-header

    //begin catalog
    section.catalog-body
      //begin catalog-filter
      .catalog-filter
        .catalog-form
          .catalog-form__row
            h2.catalog-filter__title Filter
            h3.catalog-form__title Sortieren nach:

            //begin catalog-form__sort-by
            .catalog-form__sort-by
              input(type='radio' name='sort-by' id='sort-by-price')
              label(for='sort-by-price')
                span Zu einem Preis
              input(type='radio' name='sort-by' id='sort-by-popular' checked)
              label(for='sort-by-popular')
                span Beliebtheit
            //end catalog-form__sort-by

            // begin catalog-form__by-stock
            .catalog-form__by-stock#catalog-form__by-stock
              label
                input(type='checkbox')
                .catalog-form__by-stock-input
                span Nur Artikel auf Lager
            // end catalog-form__by-stock

          .catalog-form__row
            h3.catalog-form__title Preis:
            .catalog-form__price-wrap
              input(id="minPriceCost" value="0")
              input(id="maxPriceCost" value="40000")
              .catalog-form__price#catalog-form__price

          .catalog-form__row
